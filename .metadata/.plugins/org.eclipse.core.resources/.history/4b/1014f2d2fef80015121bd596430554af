package com.tinkeracademy.projects;

import java.io.File;
import java.io.IOException;

public class Chat {

	public static void main(String[] args) {
		Chat chat = new Chat();
		javax.swing.SwingUtilities.invokeLater(new Runnable() {
			public void run() {
				chat.createAndShowGUI();
			}
		});
		chat.initialize();
	}

	public void createAndShowGUI() {
		Window.show();
		Window.addLabel("Chat Application Developed By: Tinker Academy v1.0");
		Window.addTextArea("", 16, 10, false);
		Window.addTextArea("", 4, 10, true);
		Window.addButton("Send");
	}
	
	public void initialize() {
		String userHomeDirectory = System.getProperty("user.home");
		try {		
			File file = new File(userHomeDirectory, "TinkerAcademyChat.json");
			if (!file.exists()) {
				file.createNewFile();
			}
		} catch(IOException e) {
			System.out.println("Oops:"+e);
		}
		// read the chat
	}
}
